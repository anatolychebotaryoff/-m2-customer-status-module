<?xml version="1.0"?>
<config>
    <modules>
        <Lyonscg_PageCacheFilter>
            <version>1.1.0</version>
        </Lyonscg_PageCacheFilter>
    </modules>
    <global>
        <models>
            <lyonscg_pagecachefilter>
                <class>Lyonscg_PageCacheFilter_Model</class>
                <resourceModel>lyonscg_pagecachefilter_resource</resourceModel>
            </lyonscg_pagecachefilter>
            <lyonscg_pagecachefilter_resource>
                <class>Lyonscg_PageCacheFilter_Model_Resource</class>
                <entities>
                    <filter>
                        <table>lyonscg_pagecachefilter_filter</table>
                    </filter>
                </entities>
            </lyonscg_pagecachefilter_resource>
            <enterprise_pagecache>
                <rewrite>
                    <processor_default>Lyonscg_PageCacheFilter_Model_PageCache_Processor_Default</processor_default>
                    <processor_category>Lyonscg_PageCacheFilter_Model_PageCache_Processor_Category</processor_category>
                    <processor_product>Lyonscg_PageCacheFilter_Model_PageCache_Processor_Product</processor_product>
                </rewrite>
            </enterprise_pagecache>
        </models>
        <blocks>
            <lyonscg_pagecachefilter>
                <class>Lyonscg_PageCacheFilter_Block</class>
            </lyonscg_pagecachefilter>
        </blocks>
        <helpers>
            <lyonscg_pagecachefilter>
                <class>Lyonscg_PageCacheFilter_Helper</class>
            </lyonscg_pagecachefilter>
        </helpers>
        <resources>
            <lyonscg_pagecachefilter_setup>
                <setup>
                    <module>Lyonscg_PageCacheFilter</module>
                </setup>
            </lyonscg_pagecachefilter_setup>
        </resources>
        <events>
            <controller_front_init_before>
                <observers>
                    <lyonscg_pagecachefilter_ignore_params>
                        <type>singleton</type>
                        <class>Lyonscg_PageCacheFilter_Model_Observer</class>
                        <method>filterIgnoredParameters</method>
                    </lyonscg_pagecachefilter_ignore_params>
                </observers>
            </controller_front_init_before>
        </events>
    </global>
    <admin>
        <routers>
            <lyonscg_pagecachefilter>
                <use>admin</use>
                <args>
                    <module>Lyonscg_PageCacheFilter</module>
                    <frontName>lyonscg_pagecachefilter</frontName>
                </args>
            </lyonscg_pagecachefilter>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <lyonscg_pagecachefilter>
                    <file>lyonscg_pagecachefilter.xml</file>
                </lyonscg_pagecachefilter>
            </updates>
        </layout>
        <menu>
            <system>
                <children>
                    <lyonscg_pagecachefilter translate="title" module="lyonscg_pagecachefilter">
                        <title>Full Page Cache Filter</title>
                        <sort_order>100</sort_order>
                        <action>lyonscg_pagecachefilter/adminhtml_filter/</action>
                    </lyonscg_pagecachefilter>
                </children>
            </system>
        </menu>
    </adminhtml>
</config>