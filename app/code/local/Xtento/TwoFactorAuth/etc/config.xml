<?xml version="1.0"?>
<config>
    <modules>
        <Xtento_TwoFactorAuth>
            <version>1.0.8</version>
        </Xtento_TwoFactorAuth>
    </modules>
    <global>
        <models>
            <twofactorauth>
                <class>Xtento_TwoFactorAuth_Model</class>
            </twofactorauth>
        </models>
        <resources>
            <twofactorauth_setup>
                <setup>
                    <module>Xtento_TwoFactorAuth</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </twofactorauth_setup>
            <twofactorauth_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </twofactorauth_write>
            <twofactorauth_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </twofactorauth_read>
        </resources>
        <blocks>
            <twofactorauth>
                <class>Xtento_TwoFactorAuth_Block</class>
            </twofactorauth>
        </blocks>
        <helpers>
            <twofactorauth>
                <class>Xtento_TwoFactorAuth_Helper</class>
            </twofactorauth>
        </helpers>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Xtento_TwoFactorAuth before="Mage_Adminhtml">Xtento_TwoFactorAuth_Adminhtml</Xtento_TwoFactorAuth>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <events>
            <http_response_send_before>
                <observers>
                    <attach_html>
                        <type>singleton</type>
                        <class>Xtento_TwoFactorAuth_Model_Observer</class>
                        <method>attachHtml</method>
                    </attach_html>
                </observers>
            </http_response_send_before>
            <admin_session_user_login_success>
                <observers>
                    <add_token_validation>
                        <type>singleton</type>
                        <class>Xtento_TwoFactorAuth_Model_Observer</class>
                        <method>addTokenValidation</method>
                    </add_token_validation>
                </observers>
            </admin_session_user_login_success>
            <core_block_abstract_prepare_layout_after>
                <observers>
                    <add_tab_to_user_edit>
                        <type>singleton</type>
                        <class>Xtento_TwoFactorAuth_Model_Observer</class>
                        <method>addTabToUserEdit</method>
                    </add_tab_to_user_edit>
                </observers>
            </core_block_abstract_prepare_layout_after>
            <admin_user_save_after>
                <observers>
                    <send_email_notification>
                        <type>singleton</type>
                        <class>Xtento_TwoFactorAuth_Model_Observer</class>
                        <method>sendEmailNotificationAfterAdminSave</method>
                    </send_email_notification>
                </observers>
            </admin_user_save_after>
            <core_config_data_save_after>
                <observers>
                    <has_value_for_configuration_changed>
                        <type>model</type>
                        <class>Xtento_TwoFactorAuth_Model_System_Config_Backend_Enabled</class>
                        <method>has_value_for_configuration_changed</method>
                    </has_value_for_configuration_changed>
                </observers>
            </core_config_data_save_after>
        </events>
        <!-- Following: Compatibility fix for Magento version 1.3 -->
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <twofactorauth translate="title">
                                            <title>XTENTO Two-Factor Authentication</title>
                                            <sort_order>1</sort_order>
                                        </twofactorauth>
                                    </children>
                                </config>
                                <xtento_extensions translate="title">
                                    <title>XTENTO Extensions</title>
                                    <sort_order>1</sort_order>
                                    <children>
                                        <twofactorauth translate="title">
                                            <title>Two-Factor Authentication</title>
                                            <sort_order>250</sort_order>
                                            <action>adminhtml/system_config/edit/section/twofactorauth</action>
                                        </twofactorauth>
                                    </children>
                                </xtento_extensions>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
</config>
