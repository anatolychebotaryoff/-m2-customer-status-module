<?xml version="1.0"?>
<config>
    <modules>
        <Lyonscg_Hotdeal>
            <version>0.1.0</version>
        </Lyonscg_Hotdeal>
    </modules>
    <frontend>
        <routers>
            <hotdeal>
                <use>standard</use>
                <args>
                    <module>Lyonscg_Hotdeal</module>
                    <frontName>customgrp</frontName>
                </args>
            </hotdeal>
        </routers>        
    </frontend>
    <global>
        <models>
            <lyonscg_hotdeal>
                <class>Lyonscg_Hotdeal_Model</class>
            </lyonscg_hotdeal>
            <catalogrule>
                <rewrite>
                    <observer>Lyonscg_Hotdeal_Model_Observer</observer>
                </rewrite>
            </catalogrule>
            <sales>
                <rewrite>
                    <quote_address_total_subtotal>Lyonscg_Hotdeal_Model_Quote_Address_Total_Subtotal</quote_address_total_subtotal>
                </rewrite>
            </sales>
            <catalog>
                 <rewrite>
                     <product_type_price>Lyonscg_Hotdeal_Model_Product_Type_Price</product_type_price>
                 </rewrite>
            </catalog>
        </models>
        <resources>
            <lyonscg_hotdeal_setup>
                <setup>
                    <module>Lyonscg_Hotdeal</module>
                </setup>
            </lyonscg_hotdeal_setup>
        </resources>
        <helpers>
            <hotdeal>
                <class>Lyonscg_Hotdeal_Helper</class>
            </hotdeal>
        </helpers>
        <fieldsets>
            <sales_convert_quote_item>
                <hotdeal>
                    <to_order_item>*</to_order_item>
                </hotdeal>
            </sales_convert_quote_item>
        </fieldsets>
    </global>
    <frontend>
        <events>
            <catalog_controller_product_view>
                <observers>
                    <lyonscg_hotdeal>
                        <class>lyonscg_hotdeal/observer</class>
                        <method>ensureHotdealApplied</method>
                    </lyonscg_hotdeal>
                </observers>
            </catalog_controller_product_view>
            <sales_quote_address_collect_totals_before>
                <observers>
                    <lyonscg_hotdeal>
                        <class>lyonscg_hotdeal/observer</class>
                        <method>checkCustomerGroupBefore</method>
                    </lyonscg_hotdeal>
                </observers>
            </sales_quote_address_collect_totals_before>
            <sales_quote_address_collect_totals_after>
                <observers>
                    <lyonscg_hotdeal>
                        <class>lyonscg_hotdeal/observer</class>
                        <method>checkCustomerGroupAfter</method>
                    </lyonscg_hotdeal>
                </observers>
            </sales_quote_address_collect_totals_after>
        </events>
    </frontend>
    <crontab>
        <jobs>
            <lyonscg_customer_group_ids_reset>
                <schedule>
                    <cron_expr>0 0 * * *</cron_expr>
                </schedule>
                <run>
                    <model>lyonscg_hotdeal/customergroupreset::customerGroupIdsReset</model>
                </run>
            </lyonscg_customer_group_ids_reset>
        </jobs>
    </crontab>
</config>
