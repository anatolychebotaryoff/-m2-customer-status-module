<config>
    <modules>
        <Lyonscg_CaptureAdminOrders>
            <version>0.1.0</version>
        </Lyonscg_CaptureAdminOrders>
    </modules>
    <adminhtml>
        <events>
            <adminhtml_sales_order_create_process_data>
                <observers>
                    <lyonscg_captureadminorders_observer>
                        <type>singleton</type>
                        <class>captureadminorders/observer</class>
                        <method>captureAdminInfo</method>
                    </lyonscg_captureadminorders_observer>
                </observers>
            </adminhtml_sales_order_create_process_data>
        </events>
    </adminhtml>
    <frontend>
        <events>
            <sales_order_place_before>
                <observers>
                    <lyonscg_captureadminorders_observer>
                        <type>singleton</type>
                        <class>captureadminorders/observer</class>
                        <method>captureAdminInfo</method>
                    </lyonscg_captureadminorders_observer>
                </observers>
            </sales_order_place_before>
        </events>
    </frontend>
    <global>
        <models>
            <captureadminorders>
                <class>Lyonscg_CaptureAdminOrders_Model</class>
            </captureadminorders>
        </models>
        <resources>
            <lyonscg_captureadminorders_setup>
                <setup>
                    <module>Lyonscg_CaptureAdminOrders</module>
                    <class>Mage_Customer_Model_Resource_Setup</class>
                </setup>
            </lyonscg_captureadminorders_setup>
        </resources>
        <helpers>
            <captureadminorders>
                <class>Lyonscg_CaptureAdminOrders_Helper</class>
            </captureadminorders>
        </helpers>
        <fieldsets>
            <sales_convert_quote>
                <admin_username>
                    <to_order>*</to_order>
                </admin_username>
                <admin_userid>
                    <to_order>*</to_order>
                </admin_userid>
            </sales_convert_quote>
        </fieldsets>
    </global>
</config>
