<?xml version="1.0"?>
<config>
    <modules>
        <Lyonscg_CouponMessaging>
            <version>0.1.0</version>
        </Lyonscg_CouponMessaging>
    </modules>
    <global>
        <models>
            <lyonscg_couponmessaging>
                <class>Lyonscg_CouponMessaging_Model</class>
            </lyonscg_couponmessaging>
        </models>
        <resources>
            <lyonscg_couponmessaging_setup>
                <setup>
                    <module>Lyonscg_CouponMessaging</module>
                </setup>
            </lyonscg_couponmessaging_setup>
        </resources>
        <events>
            <sales_quote_collect_totals_before>
                <observers>
                    <lyonscg_couponmessaging>
                        <class>lyonscg_couponmessaging/observer</class>
                        <method>salesQuoteCollectTotalsBefore</method>
                        <type>singleton</type>
                    </lyonscg_couponmessaging>
                </observers>
            </sales_quote_collect_totals_before>
            <sales_quote_collect_totals_after>
                <observers>
                    <lyonscg_couponmessaging>
                        <class>lyonscg_couponmessaging/observer</class>
                        <method>salesQuoteCollectTotalsAfter</method>
                        <type>singleton</type>
                    </lyonscg_couponmessaging>
                </observers>
            </sales_quote_collect_totals_after>
            <controller_action_postdispatch_checkout_cart_couponPost>
                <observers>
                    <controller_action_postdispatch_checkout_cart_couponPost_lyonscg_coupon_messaging_observer>
                        <type>singleton</type>
                        <class>lyonscg_couponmessaging/observer</class>
                        <method>customizeMessages</method>
                    </controller_action_postdispatch_checkout_cart_couponPost_lyonscg_coupon_messaging_observer>
                </observers>
            </controller_action_postdispatch_checkout_cart_couponPost>
        </events>
    </global>
</config>
