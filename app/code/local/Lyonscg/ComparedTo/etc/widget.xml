<widgets>
    <catalog_product_compare type="lyonscg_comparedto/product_widget_link" translate="name description" module="catalog">
        <name>Product Compare</name>
        <description>Compare 2 products</description>
        <is_email_compatible>0</is_email_compatible>
        <parameters>
            <product1 translate="label">
                <visible>1</visible>
                <required>1</required>
                <label>Compared Product</label>
                <type>label</type>
                <helper_block>
                    <type>adminhtml/catalog_product_widget_chooser</type>
                    <data>
                        <button translate="open">
                            <open>Select Product...</open>
                        </button>
                    </data>
                </helper_block>
                <sort_order>10</sort_order>
            </product1>
            <default1>
                <visible>1</visible>
                <required>0</required>
                <label>If product is a Grouped product then select default selection, leave empty for no default</label>
                <type>text</type>
                <sort_order>12</sort_order>
            </default1>
            <options1 translate="label">
                <visible>1</visible>
                <required>0</required>
                <label>If product is a Grouped product then select package quantities to show (Comma seperated list of package quantities)</label>
                <type>text</type>
                <sort_order>15</sort_order>
            </options1>
            <review1>
                <visible>1</visible>
                <required>0</required>
                <label>Compared Review</label>
                <type>label</type>
                <helper_block>
                    <type>lyonscg_comparedto/catalog_product_review_widget_chooser</type>
