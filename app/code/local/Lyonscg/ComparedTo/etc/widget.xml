                        <button translate="open">
                            <open>Select Review...</open>
                        </button>
                    </data>
                </helper_block>
                <sort_order>20</sort_order>
            </review1>
            <product2 translate="label">
                <visible>1</visible>
                <required>1</required>
                <label>OEM</label>
                <type>label</type>
                <helper_block>
                    <type>adminhtml/catalog_product_widget_chooser</type>
