<?xml version="1.0"?>
<config>
    <modules>
        <Lyonscg_ReplacedBy>
            <version>0.1.0</version>
        </Lyonscg_ReplacedBy>
    </modules>
    <global>
        <models>
            <catalog>
                <rewrite>
                    <product>Lyonscg_ReplacedBy_Model_Product</product>
                    <product_link>Lyonscg_ReplacedBy_Model_Product_Link</product_link>
                </rewrite>
            </catalog>
            <lyonscg_replacedby>
                <class>Lyonscg_ReplacedBy_Model</class>
            </lyonscg_replacedby>
        </models>
        <blocks>
            <adminhtml>
                <rewrite>
                    <catalog_product_edit_tabs>Lyonscg_ReplacedBy_Block_Adminhtml_Catalog_Product_Edit_Tabs</catalog_product_edit_tabs>
                </rewrite>
            </adminhtml>
            <lyonscg_replacedby>
                <class>Lyonscg_ReplacedBy_Block</class>
            </lyonscg_replacedby>
        </blocks>
        <helpers>
            <lyonscg_replacedby>
                <class>Lyonscg_ReplacedBy_Helper</class>
            </lyonscg_replacedby>
        </helpers>
        <resources>
            <lyonscg_replacedby_setup>
                <setup>
                    <module>Lyonscg_ReplacedBy</module>
                </setup>
            </lyonscg_replacedby_setup>
        </resources>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Lyonscg_ReplacedBy before="Mage_Adminhtml">Lyonscg_ReplacedBy_Adminhtml</Lyonscg_ReplacedBy>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <events>
            <catalog_product_prepare_save>
                <observers>
                    <lyonscg_replaceby_catalog_product_prepare_save>
                        <type>model</type>
                        <class>Lyonscg_ReplacedBy_Model_Observer</class>
                        <method>catalogProductPrepareSave</method>
                    </lyonscg_replaceby_catalog_product_prepare_save>
                </observers>
            </catalog_product_prepare_save>
        </events>
    </adminhtml>
</config>
