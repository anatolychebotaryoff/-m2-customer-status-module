<?xml version="1.0" encoding="UTF-8"?>
<config>
    <tabs>
        <uswf translate="label" module="uswf_popup">
            <label>USWF</label>
            <sort_order>500</sort_order>
        </uswf>
    </tabs>
    <sections>
        <uswf_popup translate="label" module="uswf_popup">
            <label>Popup extension</label>
            <tab>uswf</tab>
            <sort_order>500</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <configuration translate="label" module="uswf_popup">
                    <label>PopUp</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>500</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Enable popup</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <sort_order>10</sort_order>
                        </enabled>
                        <delay translate="label">
                            <label>Delay until popup appear</label>
                            <comment>in ms</comment>
                            <frontend_type>text</frontend_type>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <sort_order>20</sort_order>
                        </delay>
                        <first_time_user translate="label">
                            <label>For first time user only</label>
                            <frontend_type>select</frontend_type>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>30</sort_order>
                        </first_time_user>
                        <ignore_platform translate="label">
                            <label>Which platform to ignore</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>uswf_popup/system_config_source_platform</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <sort_order>40</sort_order>
                            <can_be_empty>1</can_be_empty>
                        </ignore_platform>
                        <width translate="label">
                            <label>Width of popup window</label>
                            <comment>in px</comment>
                            <frontend_type>text</frontend_type>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <sort_order>50</sort_order>
                        </width>
                        <height translate="label">
                            <label>Height of popup window</label>
                            <comment>in px</comment>
                            <frontend_type>text</frontend_type>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <sort_order>60</sort_order>
                        </height>
                        <animation_type translate="label">
                            <label>Popup animation type</label>
                            <frontend_type>select</frontend_type>
                            <source_model>uswf_popup/system_config_source_popup_animation_type</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <sort_order>70</sort_order>
                        </animation_type>
                        <animation_speed translate="label">
                            <label>Popup animation speed</label>
                            <comment>in ms</comment>
                            <frontend_type>text</frontend_type>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <sort_order>80</sort_order>
                        </animation_speed>
                        <overlay_color translate="label">
                            <label>Popup modal overlay color</label>
                            <comment>#RRGGBB</comment>
                            <frontend_type>text</frontend_type>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <sort_order>90</sort_order>
                        </overlay_color>
                        <overlay_opacity translate="label">
                            <label>Popup modal overlay opacity</label>
                            <comment>0-1</comment>
                            <frontend_type>text</frontend_type>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <sort_order>100</sort_order>
                        </overlay_opacity>
                        <cms_block translate="label">
                            <label>CMS block for popup</label>
                            <frontend_type>select</frontend_type>
                            <source_model>cms/resource_block_collection</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <sort_order>110</sort_order>
                        </cms_block>
                        <page_type translate="label">
                            <label>On what page types popup appears</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>uswf_popup/system_config_source_page_type</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <sort_order>120</sort_order>
                        </page_type>
                    </fields>
                </configuration>
            </groups>
        </uswf_popup>
    </sections>
</config>