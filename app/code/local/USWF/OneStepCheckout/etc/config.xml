            <!--<uswf_routers>-->
                <!--<uswf_onestepcheckout_persistent>-->
                    <!--<area>frontend</area>-->
                    <!--<class>USWF_OneStepCheckout_Controller_Router</class>-->
                <!--</uswf_onestepcheckout_persistent>-->
            <!--</uswf_routers>-->
        <!--</web>-->
    </default>
</config>
