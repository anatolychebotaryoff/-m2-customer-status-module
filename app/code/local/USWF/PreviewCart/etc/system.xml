<?xml version="1.0" encoding="UTF-8"?>
<config>
    <sections>
        <uswf_previewcart translate="label" module="uswf_previewcart">
            <label>Preview Cart</label>
            <tab>uswf</tab>
            <sort_order>50</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label" module="uswf_previewcart">
                    <label>General</label>
                    <comment><script type="text/javascript">Fieldset.toggleCollapse('uswf_previewcart_general')</script></comment>
                    <frontend_type>text</frontend_type>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <active translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </active>
                        <upsell_product translate="label">
                            <label>Global the Upsell Products</label>
                            <frontend_type>text</frontend_type>
                            <frontend_model>uswf_previewcart/adminhtml_widget_form_renderer_fieldset_element_sku</frontend_model>
                            <backend_model>uswf_previewcart/system_config_backend_chooser</backend_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </upsell_product>
                    </fields>
                </general>
            </groups>
        </uswf_previewcart>
    </sections>
</config>