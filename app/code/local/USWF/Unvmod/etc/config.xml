<?xml version="1.0"?>
<config>
    <modules>
        <USWF_Unvmod>
            <version>0.1.2</version>
        </USWF_Unvmod>
    </modules>
    <global>
        <helpers>
            <uswf_unvmod>
                <class>USWF_Unvmod_Helper</class>
            </uswf_unvmod>
        </helpers>
        <events>
            <controller_action_predispatch>
                <observers>
                    <uswf_controller_action_predispatch>
                        <type>singleton</type>
                        <class>USWF_Unvmod_Model_Observer</class>
                        <method>controllerActionPredispatch</method>
                    </uswf_controller_action_predispatch>
                </observers>
            </controller_action_predispatch>
        </events>
        <blocks>
            <adminhtml>
                <rewrite>
                    <sales_order_create_form>USWF_Unvmod_Block_Adminhtml_Sales_Order_Create_Form</sales_order_create_form>
                </rewrite>
            </adminhtml>
        </blocks>
        <resources>
            <uswf_unvmod_setup>
                <setup>
                    <module>USWF_Unvmod</module>
                </setup>
            </uswf_unvmod_setup>
        </resources>
    </global>
    <frontend>
        <events>
            <catalog_controller_product_init_after>
                <observers>
                    <uswf_unvmod_catalog_controller_product_init_after>
                        <type>singleton</type>
                        <class>USWF_Unvmod_Model_Observer</class>
                        <method>catalogControllerProductInitAfter</method>
                    </uswf_unvmod_catalog_controller_product_init_after>
                </observers>
            </catalog_controller_product_init_after>
        </events>
        <layout>
            <updates>
                <uswf_unvmod_utm>
                    <file>uswf/unvmod/utm.xml</file>
                </uswf_unvmod_utm>
            </updates>
        </layout>
    </frontend>

    <adminhtml>
        <layout>
            <updates>
                <uswf_unvmod>
                    <file>uswf/unvmod/unvmod.xml</file>
                </uswf_unvmod>
            </updates>
        </layout>
        <events>
            <controller_action_postdispatch_adminhtml_sales_order_create_start>
                <observers>
                    <uswf_unvmod>
                        <class>USWF_Unvmod_Model_Observer</class>
                        <method>controllerSalesOrderCreateStart</method>
                    </uswf_unvmod>
                </observers>
            </controller_action_postdispatch_adminhtml_sales_order_create_start>
        </events>
    </adminhtml>

    <default>
        <sales_email>
            <shipment>
                <enabled_send_tracking_information>1</enabled_send_tracking_information>
            </shipment>
        </sales_email>
        <uswf_unvmod>
            <general>
                <active>1</active>
            </general>
        </uswf_unvmod>
    </default>
</config>