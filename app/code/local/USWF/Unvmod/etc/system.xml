<?xml version="1.0" encoding="UTF-8"?>
<config>
    <tabs>
        <uswf translate="label">
            <label>USWF</label>
            <sort_order>500</sort_order>
        </uswf>
    </tabs>
    <sections>
        <sales_email translate="label" module="uswf_unvmod">
            <tab>sales</tab>
            <groups>
                <shipment translate="label">
                    <fields>
                        <enabled_send_tracking_information translate="label">
                            <label>Enabled Send Tracking Information</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled_send_tracking_information>
                    </fields>
                </shipment>
            </groups>
        </sales_email>
        <uswf_unvmod translate="label" module="uswf_unvmod">
            <label>USWF Admin</label>
            <tab>uswf</tab>
            <sort_order>100</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label" module="uswf_unvmod">
                    <label>Sales</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <fields>
                        <active translate="label">
                            <label>Active</label>
                            <comment>Remove store select screen in order process</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                        </active>
                    </fields>
                </general>
            </groups>
        </uswf_unvmod>
    </sections>
</config>