<config>
    <modules>
        <USWF_Banners>
            <version>0.0.1</version>
        </USWF_Banners>
    </modules>
    <global>
        <blocks>
            <uswf_banners>
                <class>USWF_Banners_Block</class>
            </uswf_banners>
        </blocks>
        <helpers>
            <uswf_banners>
                <class>USWF_Banners_Helper</class>
            </uswf_banners>
        </helpers>
        <models>
            <uswf_banners>
                <class>USWF_Banners_Model</class>
            </uswf_banners>
        </models>
        <resources>
            <uswf_banners_setup>
                <setup>
                    <module>USWF_Banners</module>
                    <class>Mage_Catalog_Model_Resource_Setup</class>
                </setup>
            </uswf_banners_setup>
        </resources>
    </global>
    <adminhtml>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <USWF_Banners>
                            <title>USWF Banners Configuration</title>
                            <sort_order>100</sort_order>
                        </USWF_Banners>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <uswf_banners>
                                            <title>USWF Banners</title>
                                        </uswf_banners>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
        <events>
            <admin_system_config_changed_section_uswf_banners>
                <observers>
                    <uswf_banners_changed>
                        <class>uswf_banners/observer</class>
                        <method>uswfbannersChanged</method>
                    </uswf_banners_changed>
                </observers>
            </admin_system_config_changed_section_uswf_banners>
            <adminhtml_init_system_config>
                <observers>
                    <uswf_banners_init>
                        <class>uswf_banners/observer</class>
                        <method>uswfbannersInit</method>
                    </uswf_banners_init>
                </observers>
            </adminhtml_init_system_config>
        </events>
    </adminhtml>
    <admin>
        <routers>
            <uswf_banners>
                <use>admin</use>
                <args>
                    <module>USWF_Banners_Adminhtml</module>
                    <frontName>uswf_banners</frontName>
                </args>
            </uswf_banners>
        </routers>
    </admin>
</config>