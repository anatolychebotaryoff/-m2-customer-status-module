<?xml version="1.0" encoding="UTF-8"?>
<config>
    <tabs>
        <uswf translate="label" module="uswf_smartfit">
            <label>USWF</label>
            <sort_order>500</sort_order>
        </uswf>
    </tabs>
    <sections>
        <uswf_smartfit translate="label" module="uswf_smartfit">
            <label>Smartfit Website</label>
            <tab>uswf</tab>
            <sort_order>501</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <banners translate="label" module="uswf_smartfit">
                    <label>Banners Block</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>500</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <sort_order>10</sort_order>
                        </enabled>
                        <banner_left_top_image translate="label">
                            <label>Left Top Banner Image</label>
                            <frontend_type>file</frontend_type>
                            <backend_model>adminhtml/system_config_backend_file</backend_model>
                            <upload_dir>media</upload_dir>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <sort_order>20</sort_order>
                        </banner_left_top_image>
                        <banner_left_top_link translate="label">
                            <label>Left Top Banner Link</label>
                            <frontend_type>text</frontend_type>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <sort_order>30</sort_order>
                        </banner_left_top_link>
                        <banner_left_bottom_image translate="label">
                            <label>Left Bottom Banner Image</label>
                            <frontend_type>file</frontend_type>
                            <backend_model>adminhtml/system_config_backend_file</backend_model>
                            <upload_dir>media</upload_dir>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <sort_order>40</sort_order>
                        </banner_left_bottom_image>
                        <banner_left_bottom_link translate="label">
                            <label>Left Bottom Banner Link</label>
                            <frontend_type>text</frontend_type>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <sort_order>50</sort_order>
                        </banner_left_bottom_link>
                        <banner_list translate="label">
                            <label>Slide banners</label>
                            <frontend_model>uswf_smartfit/adminhtml_system_config_form_field_banners</frontend_model>
                            <backend_model>uswf_smartfit/adminhtml_system_config_backend_banners</backend_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <sort_order>60</sort_order>
                        </banner_list>
                        <slider_animation_duration>
                            <label>Slider Animation Duration</label>
                            <frontend_type>text</frontend_type>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <sort_order>70</sort_order>
                        </slider_animation_duration>
                        <slider_time_between_change>
                            <label>Time Between slider change</label>
                            <frontend_type>text</frontend_type>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <sort_order>80</sort_order>
                        </slider_time_between_change>
                        <banner_bottom_link translate="label">
                            <label>Bottom Banner Link</label>
                            <frontend_type>text</frontend_type>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <sort_order>89</sort_order>
                        </banner_bottom_link>
                        <banner_bottom_image translate="label">
                            <label>Bottom Banner Image</label>
                            <frontend_type>file</frontend_type>
                            <backend_model>adminhtml/system_config_backend_file</backend_model>
                            <upload_dir>media</upload_dir>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <sort_order>90</sort_order>
                        </banner_bottom_image>
                    </fields>
                </banners>
                <featured_products translate="label" module="uswf_smartfit">
                    <label>Featured Products</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>501</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <sort_order>10</sort_order>
                        </enabled>
                        <column_count>
                            <label>Column count</label>
                            <frontend_type>text</frontend_type>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <sort_order>20</sort_order>
                        </column_count>
                        <product_limit>
                            <label>Product limit</label>
                            <frontend_type>text</frontend_type>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <sort_order>30</sort_order>
                        </product_limit>
                    </fields>
                </featured_products>
            </groups>
        </uswf_smartfit>
    </sections>
</config>