<config>
    <modules>
        <USWF_Smartfit>
            <version>0.0.8</version>
        </USWF_Smartfit>
    </modules>
    <global>
        <blocks>
            <uswf_smartfit>
                <class>USWF_Smartfit_Block</class>
            </uswf_smartfit>
            <megamenu>
                <rewrite>
                    <navigation>USWF_Smartfit_Block_Megamenu_Navigation</navigation>
                </rewrite>
            </megamenu>
            <storelocator>
                <rewrite>
                    <storelocator>USWF_Smartfit_Block_Storelocator</storelocator>
                </rewrite>
            </storelocator>
        </blocks>
        <helpers>
            <uswf_smartfit>
                <class>USWF_Smartfit_Helper</class>
            </uswf_smartfit>
            <ajaxsearch>
                <rewrite>
                    <data>USWF_Smartfit_Helper_Ajaxsearch</data>
                </rewrite>
            </ajaxsearch>
            <megamenu>
                <rewrite>
                    <data>USWF_Smartfit_Helper_Megamenu</data>
                </rewrite>
            </megamenu>
        </helpers>
        <models>
            <uswf_smartfit>
                <class>USWF_Smartfit_Model</class>
            </uswf_smartfit>
        </models>
        <resources>
            <uswf_smartfit_setup>
                <setup>
                    <module>USWF_Smartfit</module>
                    <class>Mage_Catalog_Model_Resource_Setup</class>
                </setup>
            </uswf_smartfit_setup>
        </resources>
        <events>
            <catalog_category_prepare_save>
                <observers>
                    <Cmsmart_megamenu_observer>
                        <class>uswf_smartfit/observer</class>
                        <method>saveCategoryTop</method>
                    </Cmsmart_megamenu_observer>
                </observers>
            </catalog_category_prepare_save>
        </events>
    </global>
    <frontend>
        <events>
            <core_layout_block_create_after>
                <observers>
                    <megamenu>
                        <type>singleton</type>
                        <class>uswf_smartfit/observer</class>
                        <method>checkLayouts</method>
                    </megamenu>
                </observers>
            </core_layout_block_create_after>
        </events>
        <routers>
            <ajaxcart>
                <args>
                    <modules>
                        <USWF_Smartfit before="Cmsmart_AjaxCart">USWF_Smartfit</USWF_Smartfit>
                    </modules>
                </args>
            </ajaxcart>
        </routers>
    </frontend>
    <adminhtml>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <uswf_smartfit translate="title" module="uswf_smartfit">
                                            <title>USWF Smartfit</title>
                                            <sort_order>101</sort_order>
                                        </uswf_smartfit>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
    <default>
        <storelocator>
            <general>
                <enable>0</enable>
            </general>
        </storelocator>
        <uswf_smartfit>
            <banners>
                <enabled>0</enabled>
            </banners>
            <featured_products>
                <enabled>0</enabled>
            </featured_products>
        </uswf_smartfit>
        <le_sociallogin>
            <general>
                <showoncheckout>0</showoncheckout>
            </general>
        </le_sociallogin>
    </default>
    <websites>
        <sf>
            <uswf_smartfit>
                <banners>
                    <enabled>1</enabled>
                    <banner_left_top_image>{skin}/dealer-locator-banner.png</banner_left_top_image>
                    <banner_left_top_link>/storelocator/</banner_left_top_link>
                    <banner_left_bottom_image>{skin}/dealer-login-banner.png</banner_left_bottom_image>
                    <banner_left_bottom_link>/dealer/account/login/</banner_left_bottom_link>
                    <slider_animation_duration>1000</slider_animation_duration>
                    <slider_time_between_change>5000</slider_time_between_change>
                    <banner_bottom_image>{skin}/shop-our-catalog.png</banner_bottom_image>
                </banners>
                <featured_products>
                    <enabled>1</enabled>
                    <column_count>4</column_count>
                    <product_limit>8</product_limit>
                </featured_products>
            </uswf_smartfit>
            <storelocator>
                <general>
                    <enable>1</enable>
                </general>
            </storelocator>
        </sf>
    </websites>
</config>