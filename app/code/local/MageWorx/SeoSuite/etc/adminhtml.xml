                            <action>mageworx_seosuite/adminhtml_seosuite_report_product/index</action>
                            <sort_order>10</sort_order>
                        </product>

                        <category translate="title" module="seosuite">
                            <title>Categories</title>
                            <action>mageworx_seosuite/adminhtml_seosuite_report_category/index</action>
                            <sort_order>20</sort_order>
                        </category>

                        <cms translate="title" module="seosuite">
