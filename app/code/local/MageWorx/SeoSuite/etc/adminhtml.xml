                                                <sort_order>120</sort_order>
                                            </richsnippets>
                                            <tools>
                                                <title>Tools for SEO Suite extension</title>
                                                <sort_order>140</sort_order>
                                            </tools>
                                        </children>
                                    </mageworx_seo>
                                </children>
                            </config>
                        </children>
                    </system>
                </children>
