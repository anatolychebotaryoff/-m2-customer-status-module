<?php
/**
 * Last order sidebar
 *
 * @see Mage_Sale_Block_Reorder_Sidebar
 */
?>
<?php $_helperUV = $this->helper('uswf_universalvariable'); ?>
<?php $_items = $this->getItems()?>
<?php if($_items): ?>
<div class="block block-reorder">
    <div class="block-title">
        <strong><span><?php echo $this->__('My Orders') ?></span></strong>
    </div>
    <form method="post" action="<?php echo $this->getFormActionUrl() ?>" id="reorder-validate-detail">
        <?php echo $this->getBlockHtml('formkey'); ?>
        <div class="block-content">
            <p class="block-subtitle"><?php echo $this->__('Last Ordered Items') ?></p>
            <ol id="cart-sidebar-reorder">
            <?php $_showAddButtonFlag = false ?>
            <?php foreach ($_items as $_item): ?>
                <li class="item">
                    <?php $sku = $_helperUV->getAttributeValue($_item->getProductId(), 'sku'); ?>
                    <?php $package_qty = $_helperUV->getAttributeValue($_item->getProductId(), 'package_qty'); ?>
                    <?php if (is_numeric($package_qty) && (int)$package_qty != 1) : ?>
                        <?php $variant = $package_qty.'pk'; ?>
                    <?php else : ?>
                        <?php $variant = 'single'; ?>
                    <?php endif; ?>
                    <?php $brand = $_helperUV->getAttributeValue($_item->getProductId(), 'manufacturer'); ?>
                    <?php $productCategory = $_helperUV->getAttributeValue($_item->getProductId(), 'item_type'); ?>
                    <?php if ($this->isItemAvailableForReorder($_item)): ?>
                        <?php $data_add_to_cart = array(
                                'id' => $sku,
                                'name' => $this->jsQuoteEscape($_item->getName()),
                                'price' => $this->helper('checkout')->getSubtotalInclTax($_item),
                                'quantity' => 1,
                                'category' => $productCategory,
                                'variant' => $variant,
                                'brand' => $brand
                              ); ?>
                        <?php $_showAddButtonFlag = true ?>
                        <input type="checkbox" name="order_items[]" id="reorder-item-<?php echo $_item->getId() ?>" value="<?php echo $_item->getId() ?>" title="<?php echo $this->__('Add to Cart') ?>" class="checkbox validate-one-required-by-name" data-add_to_cart="<?php echo htmlspecialchars(json_encode($data_add_to_cart)); ?>" />
                        <script type="text/javascript">
                        //<![CDATA[
                        addEvent(window, 'load', function() {
                            $('reorder-item-<?php echo $_item->getId() ?>').advaiceContainer = 'cart-sidebar-reorder-advice-container';
                        });
                        //]]>
                        </script>
                    <?php endif; ?>
                    <p class="product-name"><a href="<?php echo $_item->getProduct()->getProductUrl() ?>" onclick="onProductClick('<?php echo $sku ?>', '<?php echo $this->jsQuoteEscape($_item->getName()) ?>', 'Last ordered items', '<?php echo $productCategory ?>', '<?php echo $variant ?>', '<?php echo $brand ?>' );"><?php echo $this->escapeHtml($_item->getName()) ?></a></p>
                </li>
            <?php endforeach; ?>
            </ol>
            <script type="text/javascript">addEvent(window, 'load', function(){ decorateList('cart-sidebar-reorder'); });</script>
            <div id="cart-sidebar-reorder-advice-container"></div>
            <div class="actions">
                <?php if ($_showAddButtonFlag): ?>
                <button type="submit" title="<?php echo $this->__('Add to Cart') ?>" class="button btn-cart" onclick="addToCart();"><span><span><?php echo $this->__('Add to Cart') ?></span></span></button>
                <?php endif; ?>
                <a href="<?php echo $this->getUrl('customer/account') ?>"><?php echo $this->__('View All'); ?></a>
            </div>
        </div>
    </form>
</div>
<?php echo $this->getPagerHtml(); ?>
<script type="text/javascript">
//<![CDATA[
addEvent(window, 'load', function() {
    var reorderFormDetail = new VarienForm('reorder-validate-detail');
});

function addToCart() {
    jQuery('#cart-sidebar-reorder .checkbox:checked').each(function(){
        var product_data = jQuery(this).data('add_to_cart');
        onAddToCart(product_data.id, product_data.name, product_data.price, product_data.quantity, product_data.category, product_data.variant, product_data.brand);
    });
}
//]]>
</script>
<?php endif ?>
