/** @var $this Enterprise_TargetRule_Block_Catalog_Product_Item */
$_item = $this->getItem();
if ($_item):
?>
    <div class="product">
        <a href="<?php echo $this->getProductUrl($_item) ?>" title="<?php echo $this->escapeHtml($_item->getName()) ?>" class="product-image" onclick="onProductClick('<?php echo $_item->getId() ?>', '<?php echo $this->jsQuoteEscape($_item->getName()) ?>', 'Related Products TargetRule');"><img src="<?php echo $this->helper('catalog/image')->init($_item, 'thumbnail')->resize(90) ?>" alt="<?php echo $this->escapeHtml($_item->getName()) ?>" /></a>
        <p class="product-name"><a href="<?php echo $this->getProductUrl($_item) ?>" onclick="onProductClick('<?php echo $_item->getId() ?>', '<?php echo $this->jsQuoteEscape($_item->getName()) ?>', 'Related Products TargetRule');"><?php echo $this->escapeHtml($_item->getName()) ?></a></p>
        <div class="product-details">
            <?php echo $this->getPriceHtml($_item, true, '-related') ?>
            <?php if ($this->helper('wishlist')->isAllow()) : ?>
                <a href="<?php echo $this->getAddToWishlistUrl($_item) ?>" class="link-wishlist"><?php echo $this->__('Add to Wishlist') ?></a>
            <?php endif; ?>
            <div class="clear"></div>
            <a href="<?php echo $this->getAddToCartUrl($_item) ?>" class="link-cart"><?php echo $this->__('Add to Cart') ?></a>
        </div>
    </div>
<?php endif;?>
