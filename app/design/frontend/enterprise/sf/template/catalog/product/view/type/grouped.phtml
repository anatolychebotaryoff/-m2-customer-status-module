    <?php 
        $lowestCustomPrice = PHP_INT_MAX; 
        $lowestMsrp = PHP_INT_MAX;
        foreach($_associatedProducts as $_item) {
            $itemFinalPrice = $_item->getFinalPrice();
            $snippetPrices[] = $itemFinalPrice;
            $itemMsrp = $_item->getMsrp();
