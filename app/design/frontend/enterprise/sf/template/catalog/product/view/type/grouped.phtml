    <?php endif; ?>
    <?php if ($_hasAssociatedProducts): ?>
        <?php foreach($_associatedProducts as $_item): ?>
            <div style="display:none;"><?php echo Mage::helper('core')->currency($_item->getFinalPrice()); ?></div>
        <?php endforeach; ?>
    <?php endif; ?>
