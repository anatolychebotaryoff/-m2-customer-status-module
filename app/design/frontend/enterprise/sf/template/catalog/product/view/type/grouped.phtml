                                        <?php elseif ($_item->getQty() > 1): ?>
                                            <?php $_priceEach = Mage::helper('core')->currency($_item->getFinalPrice() / $_item->getQty()*1) ?>
                                            <span class="qty"><?php echo $_item->getQty()*1 ?></span>&nbsp;<span><?php echo $this->__('Filters') ?></span>
