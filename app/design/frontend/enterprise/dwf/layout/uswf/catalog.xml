<?xml version="1.0"?>

<layout version="0.1.0">

    <catalog_category_default translate="label">
        <reference name="catalog.rightlayer">
            <action method="setTemplate">
                <template>uswf/catalog/layer/view.phtml</template>
            </action>
        </reference>
        <reference name="product_list">
            <block type="uswf_catalog/product_compare_comparebox" name="catalog.compare.box" as="compare_box"
                   template="uswf/catalog/compare/box.phtml"/>
            <block type="core/template" name="product.price.custom" as="product_price_custom"
                   template="uswf/catalog/category/price/custom.phtml"/>
        </reference>
    </catalog_category_default>

    <catalog_category_layered translate="label">
        <reference name="catalog.rightlayer">
            <action method="setTemplate">
                <template>uswf/catalog/layer/view.phtml</template>
            </action>
        </reference>
        <reference name="product_list">
            <block type="uswf_catalog/product_compare_comparebox" name="catalog.compare.box" as="compare_box"
                   template="uswf/catalog/compare/box.phtml"/>
            <block type="core/template" name="product.price.custom" as="product_price_custom"
                   template="uswf/catalog/category/price/custom.phtml"/>
        </reference>
    </catalog_category_layered>

    <catalog_product_view>
        <reference name="product.info.addtocart">
            <block type="core/template" name="product.info.addtocart.logopaypal"
                   template="uswf/catalog/product/view/logopaypal.phtml"/>
        </reference>
    </catalog_product_view>

    <PRODUCT_TYPE_grouped>
        <reference name="product.info.grouped">
            <block type="core/template" name="product.price.custom" as="product_price_custom" template="uswf/catalog/product/price/custom.phtml"/>
        </reference>
        <reference name="product.info.grouped.addtocart">
            <block type="core/template" name="product.info.addtocart.logopaypal"
                   template="uswf/catalog/product/view/logopaypal.phtml"/>
        </reference>
    </PRODUCT_TYPE_grouped>

    <PRODUCT_TYPE_simple>
        <reference name="product.info.simple">
            <block type="core/template" name="product.price.custom" as="product_price_custom" template="uswf/catalog/product/price/custom.phtml"/>
        </reference>
    </PRODUCT_TYPE_simple>

    <PRODUCT_TYPE_bundle>
        <reference name="product.info.bundle">
            <block type="core/template" name="product.price.custom" as="product_price_custom"
                   template="uswf/catalog/product/price/custom.phtml"/>
        </reference>
        <reference name="product.info">
            <block type="core/template" name="product.info.addtocart.logopaypal"
                   template="uswf/catalog/product/view/logopaypal.phtml"/>
        </reference>
    </PRODUCT_TYPE_bundle>

    <catalog_product_compare_massadd>
        <update handle="catalog_product_compare_index"/>
    </catalog_product_compare_massadd>

</layout>
