                            <td><b><?php echo $element['brand']?></b></td>
                        <?php elseif (isset($element['part'])):?>
                            <td><?php echo $element['part']?></td>
                        <?php else: ?>
                            <td><?php echo $element; ?></td>
                        <?php endif; ?>
                    <?php endfor; ?>
                </tr>
            <?php endfor; ?>
            </tbody>
        </table>
    </div>
</div>
<?php endif; ?>

