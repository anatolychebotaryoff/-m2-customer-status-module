<script type="text/javascript">
    addEvent(window, 'load', function() {
        function setFontSize(maxLength) {
            var descriptionLength = jQuery('.description').text().length;
            if (descriptionLength > maxLength) {
                var fontSize = maxLength / descriptionLength * 100;
                jQuery('.description').css('font-size', fontSize + '%');
            } else {
                jQuery('.description').css('font-size', '100%');
            }
        }

        function checkWidth() {
            var width = jQuery('.description').width();
            switch (width) {
                case 207:
                    setFontSize(61);
                    break;
                case 169:
                    setFontSize(53);
                    break;
                case 147:
                    setFontSize(41);
                    break;
                case 116:
                    setFontSize(33);
                    break;
                default:
                    setFontSize(61);
                    break;
            }
        }

        checkWidth();
        jQuery(window).resize(function () {
            checkWidth();
        });
    });
</script>
