/**
 * Category layered navigation
 *
 * @deprecated since 1.12.0.0
 */
?>
<?php if($this->canShowBlock()): ?>
<div class="block block-layered-nav">
    <div class="block-title">
        <strong><span><?php echo $this->__('Shop By') ?></span></strong>
    </div>
    <?php echo $this->getStateHtml() ?>
    <div class="block-content">
    <?php if($this->canShowOptions()): ?>
            <dl id="narrow-by-list">
                <?php $_filters = $this->getFilters() ?>
                <?php foreach ($_filters as $_filter): ?>
                    <?php if($_filter->getItemsCount()): ?>
                        <?php if ($_filter->getName() == 'Price'): ?>
                            <?php if (Mage::getStoreConfig('catalog/layered_navigation/display_price_navigation')): ?>
                                <dt id="<?php echo $_filter->getBlockAlias()?>"><span class="toggle"></span><?php echo $this->__($_filter->getName()) ?></dt>
                            <?php endif; ?>
                        <?php elseif ($_filter->getName() == 'Category'): ?>
                            <dt id="<?php echo $_filter->getBlockAlias()?>"><span class="toggle"></span><?php echo $this->__($_filter->getLayer()->getCurrentCategory()->getName()) ?></dt>
                        <?php else: ?>
                            <dt id="<?php echo $_filter->getBlockAlias()?>"><span class="toggle"></span><?php echo $this->__($_filter->getName()) ?></dt>
                        <?php endif; ?>
                        <dd style="display: none;"></dd>
                    <?php endif; ?>
                <?php endforeach; ?>
            </dl>
            <script type="text/javascript">addEvent(window, 'load', function(){ decorateDataList('narrow-by-list'); });</script>
    <?php endif; ?>
    <?php if ($this->getLayer()->getState()->getFilters()): ?>
        <div class="actions"><a href="<?php echo $this->getClearUrl() ?>"><?php echo $this->__('Clear All') ?></a></div>
    <?php endif; ?>
    </div>
</div>
<script type="text/javascript">
    addEvent(window, 'load', function(){
        var count = 0;
        jQuery('dl#narrow-by-list > dt').each(function(index) {
            if (count <= 0) {
                jQuery(this).next('dd').hide();
            } else {
                jQuery(this).addClass('opened');
            }
            count--;
        });
        jQuery('dl#narrow-by-list > dt').click(function(){
            var item = this;
            if (jQuery(item).next('dd').is(':empty')){
                jQuery(item).next('dd').html('<img src="/skin/frontend/enterprise/dwf/images/opc-ajax-loader.gif">');
                jQuery(item).next('dd').slideToggle('fast');
                jQuery(item).next('dd').toggleClass('opened');
                jQuery(item).toggleClass('opened');
                jQuery(item).next('dd').css('display', 'inherit');

                jQuery(item).next('dd').load("/ajaxfilter?" + item.id,
                    {
                        data : {
                            filterS: item.id ,
                            category: <?php echo Mage::registry('current_category')->getId() ?>,
                            url: '<?php echo $this->helper('core/url')->getCurrentUrl() ?>',
                        }
                    },
                    function() {
                        //jQuery(item).next('dd').slideToggle('fast');
                        //jQuery(item).toggleClass('opened');
                    }
                );
            } else {
                jQuery(item).next('dd').slideToggle('fast');
                jQuery(item).toggleClass('opened');
            }
            return false;
        });
    });
</script>
<?php endif; ?>
