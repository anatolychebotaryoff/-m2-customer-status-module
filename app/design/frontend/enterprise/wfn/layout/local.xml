<layout  version="0.1.0">
    <default>
        <reference name="head">
			<action method="addCss"><stylesheet>css/style-default.css</stylesheet></action>
            <action method="addCss"><stylesheet>webfontkit/stylesheet.css</stylesheet></action>
            <action method="addCss"><stylesheet>css/skeleton.css</stylesheet></action>
            <action method="unsetChild"><name>js_cookies</name></action>
            <block type="core/text" name="event.loaded" before="-">
                <action method="setText">
                    <text><![CDATA[
                    <script type="text/javascript">
                    function addEvent(element, event, fn) {
                        if (element.addEventListener)
                            element.addEventListener(event, fn, false);
                        else if (element.attachEvent)
                            element.attachEvent('on' + event, fn);
                    }
                    addEvent(window, 'load', function() {
                        if ((typeof mainNav !== 'undefined') && mainNav) {
                            mainNav('nav', {"show_delay":"100","hide_delay":"100"});
                        }
                    });
                    </script>
                    ]]></text>
                </action>
            </block>
            <block type="page/js_cookie" name="js_cookies" template="page/js/cookie.phtml"/>
		</reference>
		<reference name="top.links">
            <action method="addLink" translate="label title" module="customer"><label>Help</label><url>customer-service.html</url><title>Help</title><prepare>true</prepare><urlParams><_direct>customer-service.html</_direct></urlParams><position>20</position></action>
        </reference>
        <reference name="header">
            <block type="checkout/cart_sidebar" name="top_cart" as="top_cart" template="checkout/cart/mini_cart_top.phtml" before="-">
                <action method="addItemRender"><type>simple</type><block>checkout/cart_item_renderer</block><template>checkout/cart/sidebar/default.phtml</template></action>
                <action method="addItemRender"><type>grouped</type><block>checkout/cart_item_renderer_grouped</block><template>checkout/cart/sidebar/default.phtml</template></action>
                <action method="addItemRender"><type>configurable</type><block>checkout/cart_item_renderer_configurable</block><template>checkout/cart/sidebar/default.phtml</template></action>
                <block type="core/text_list" name="cart_sidebar.extra_actions" as="extra_actions" translate="label" module="checkout">
                    <label>Shopping Cart Sidebar Extra Actions</label>
                </block>
            </block>            
        </reference>

        <reference name="footer">
            <block type="newsletter/subscribe" name="footer.newsletter" template="newsletter/subscribe.phtml"/>
            <block name="footer_links" type="cms/block">
                <action method="setBlockId"><blockid>wagento_footer</blockid></action>
            </block>    
        </reference>

        <reference name="root">
            <remove name="catalog_compare_sidebar"/>
            <block type="lyonscg_cachedcompare/product_compare_sidebar" name="lyonscg_cachedcompare_sidebar" template="lyonscg/cachedcompare/sidebar.phtml"/>
        </reference>
	</default>
	<customer_account>
		<reference name="customer_account_navigation">
			<action method="removeLink"><name>billing_agreements</name></action>
			<action method="removeLink"><name>recurring_profiles</name></action>
			<action method="removeLink"><name>downloadable_products</name></action>	
		</reference>
	</customer_account>
	<customer_logged_out>
        <reference name="top.links">
            <action method="removeTopLink"><label>Log In</label></action>
        </reference>
    </customer_logged_out>
    <cms_index_index>
        <reference name="content">
            <!-- lmontgomery - removed for redmine #346831 on 2014-11-17 -->
            <!--<block type="core/template" name="homepage_filter_brand" as="homepage_filter_brand" template="magentothem/brand_homepage.phtml" />-->
            <block type="core/template" name="homepage_featured_categories" as="homepage_featured_categories" template="magentothem/content_homepage.phtml" />
            <!-- lmontgomery - removed for redmine #346831 on 2014-11-17 -->
            <!--<block type="catalog/product_list" name="homepage_bestseller" as="homepage_bestseller" template="magentothem/bestseller.phtml"/>-->
            <block type="reports/product_viewed" name="homepage_previous_view" as="homepage_previous_view" template="magentothem/previous_viewed.phtml"/>
            <block type="core/template" name="homepage_static_block" as="homepage_static_block" template="magentothem/static_homepage.phtml" />
        </reference>
    </cms_index_index>
    <checkout_cart_index>
        <remove name="breadcrumbs" />
    </checkout_cart_index>
    <checkout_onepage_index>
        <remove name="breadcrumbs" />
    </checkout_onepage_index>
    <onestepcheckout_index_index>
        <remove name="breadcrumbs" />
        <reference name="head">
            <action method="addItem"><type>skin_js</type><name>onestepcheckout/js/window.js</name><group>loadgroup="after_prototype"</group></action>
            <action method="addItem"><type>skin_js</type><name>onestepcheckout/js/onestepcheckout.js</name><group>loadgroup="after_prototype"</group></action>
            <action method="addItem"><type>skin_js</type><name>qs/js/validationform.js</name><group>loadgroup="after_prototype"</group></action>
            <action method="addItem"><type>skin_js</type><name>js/sfc_cybersource/sop_checkout.js</name><group>loadgroup="after_prototype"</group></action>
        </reference>
    </onestepcheckout_index_index>

    <catalog_category_default>
        <reference name="category.products">
            <remove name="catalog_compare_sidebar"/>
            <block type="lyonscg_cachedcompare/product_compare_sidebar" name="lyonscg_cachedcompare_sidebar" template="lyonscg/cachedcompare/sidebar.phtml"/>
        </reference>
    </catalog_category_default>

    <catalog_product_view>
        <reference name="product.info">
            <remove name="catalog_compare_sidebar"/>
            <block type="lyonscg_cachedcompare/product_compare_sidebar" name="lyonscg_cachedcompare_sidebar" template="lyonscg/cachedcompare/sidebar.phtml"/>
        </reference>
    </catalog_product_view>

    <review_product_view>
        <!-- Redmine 376031 - add noindex header to review pages -->
        <reference name="head">
            <action method="setRobots"><robots>noindex,nofollow</robots></action>
        </reference>
        <reference name="content">
            <remove name="catalog_compare_sidebar"/>
            <remove name="catalogsearch_advanced_form"/>
        </reference>
    </review_product_view>

    <review_product_list>
        <reference name="product.info">
            <remove name="catalog_compare_sidebar"/>
            <block type="lyonscg_cachedcompare/product_compare_sidebar" name="lyonscg_cachedcompare_sidebar" template="lyonscg/cachedcompare/sidebar.phtml"/>
        </reference>
    </review_product_list>

    <customer_account_login>
        <remove name="breadcrumbs"/>
    </customer_account_login>
    <customer_account_forgotpassword>
        <remove name="breadcrumbs"/>
    </customer_account_forgotpassword>
    <customer_account_create>
        <remove name="breadcrumbs"/>
    </customer_account_create>

    <paypal_express_review>
        <reference name="head">
            <action method="addItem"><type>skin_js</type><name>js/checkout/review.js</name><group>loadgroup="after_prototype" defer</group></action>
        </reference>
    </paypal_express_review>

</layout>
