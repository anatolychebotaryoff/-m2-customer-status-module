<?xml version="1.0"?>
<layout>
    <default>
        <reference name="head">
            <action method="addItem">
                <type>skin_js</type>
                <name>js/uswf/unvmod/utm.js</name>
            </action>
        </reference>
        <reference name="after_body_start">
            <block type="core/template" name="utm_js" as="utm_js" template="uswf/unvmod/utmjs.phtml" before="-"/>
        </reference>
    </default>

    <catalog_category_view>
        <reference name="after_body_start">
            <block type="core/template" name="lyonscg.cachedcompare.sidebar.catalog.action.js" as="lyonscg_cachedcompare_sidebar_action_js"
                   template="uswf/unvmod/sidebar/category/action.phtml" before="-"/>
        </reference>
    </catalog_category_view>

    <catalog_category_default>
        <reference name="after_body_start">
            <block type="core/template" name="lyonscg.cachedcompare.sidebar.catalog.action.js" as="lyonscg_cachedcompare_sidebar_action_js"
                   template="uswf/unvmod/sidebar/category/action.phtml" before="-"/>
        </reference>
    </catalog_category_default>

    <catalog_product_view>
        <reference name="after_body_start">
            <block type="core/template" name="lyonscg.cachedcompare.sidebar.product.action.js" as="lyonscg_cachedcompare_sidebar_action_js"
                   template="uswf/unvmod/sidebar/product/action.phtml" before="-"/>
        </reference>
    </catalog_product_view>

    <review_product_view>
        <reference name="after_body_start">
            <block type="core/template" name="lyonscg.cachedcompare.sidebar.product.action.js" as="lyonscg_cachedcompare_sidebar_action_js"
                   template="uswf/unvmod/sidebar/product/action.phtml" before="-"/>
        </reference>
    </review_product_view>

    <review_product_list>
        <reference name="after_body_start">
            <block type="core/template" name="lyonscg.cachedcompare.sidebar.product.action.js" as="lyonscg_cachedcompare_sidebar_action_js"
                   template="uswf/unvmod/sidebar/product/action.phtml" before="-"/>
        </reference>
    </review_product_list>
</layout>