<?xml version="1.0"?>

<layout version="0.1.0">

    <catalog_category_default translate="label">
        <reference name="catalog.rightlayer">
            <action method="setTemplate">
                <template>uswf/catalog/layer/view.phtml</template>
            </action>
        </reference>
        <reference name="product_list">
            <block type="uswf_catalog/product_compare_comparebox" name="catalog.compare.box" as="compare_box"
                   template="uswf/catalog/compare/box.phtml"/>
        </reference>
    </catalog_category_default>

    <catalog_category_layered translate="label">
        <reference name="catalog.rightlayer">
            <action method="setTemplate">
                <template>uswf/catalog/layer/view.phtml</template>
            </action>
        </reference>
        <reference name="product_list">
            <block type="uswf_catalog/product_compare_comparebox" name="catalog.compare.box" as="compare_box"
                   template="uswf/catalog/compare/box.phtml"/>
        </reference>
    </catalog_category_layered>

    <catalog_product_compare_massadd>
        <update handle="catalog_product_compare_index"/>
    </catalog_product_compare_massadd>

</layout>
