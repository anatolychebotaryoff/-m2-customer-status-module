<script type="text/javascript">
    addEvent(window, 'load', function() {
        var freeShipImageUrl = "<?php echo $this->getSkinUrl('images/free-shipping.png') ?>";
        var overShipImageUrl = "<?php echo $this->getSkinUrl('images/freeShippingOver.png') ?>";
        var freeShippingSubtotal = <?php echo Mage::getStoreConfig('carriers/freeshipping/free_shipping_subtotal') ?>;

        $$('ul.tabplate > li').each(function (e) {
            var str = e.innerHTML;
            str = str.trim();
            if (str.length == 0) {
                var str = '#attrtab li.' + e.id;
                $$(str)[0].remove();
                e.remove();
            }
        });
        var price = $$('.block-cart-header span.price')[0].innerHTML;
        price = price.replace('$', '');
        price = price.replace(',', '');
        price = price * 1;
        var img = $$('div.free-shipping a img')[0];
        if (document.contains(img)) {
            if (price >= freeShippingSubtotal) {
                img.src = freeShipImageUrl;
            } else {
                img.src = overShipImageUrl;
            }
        }

        var hash = document.location.hash;
        if (hash == '#customer-reviews' || hash == '#review-form') {
            jQuery('#attrtab > li.active').removeClass('active');
            jQuery('#attrtab > li.attrreviews').addClass('active');
            jQuery('.tabplate > li.active').removeClass('active');
            jQuery('.tabplate #attrreviews').addClass('active');
        }
    });
</script>
