<?php $_menu = $this->getHtml('level-top') ?>
<?php if($_menu): ?>
    <div class="nav-container">
        <div class="fridge-mob-menu-bg"><div id="fridge-mob-menu"><?php echo $this->__('Menu') ?></div></div>
        <ul id="nav" class="nonmobile">
            <?php echo $_menu ?>
        </ul>
    </div>
<?php endif ?>
<script type="text/javascript">
    addEvent(window, 'load', function(){
        $$('#nav > li > a span').each(function(e){
            var str = e.innerHTML;
            var maxSymbolInLine = 17;
            var firstline = '';
            var vordsCount = 0;
            if (str.length > 0){
                str = str.split(" ");
                for (var i=0; i< str.length; i++, vordsCount++){
                    if(firstline.length + 1 + str[i].length <= maxSymbolInLine){
                        firstline += str[i] + ' ';
                    } else {
                        break;
                    }
                }
                firstline = '<span class="small">' + firstline + '</span>';
                str = str.slice(vordsCount, str.length);
                str.unshift(firstline);
                str = str.join(' ');
                e.innerHTML = str;
            }
        })
    });
</script>
